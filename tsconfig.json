{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true
    },
    "include": ["src/*", "src/api/initialize.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}